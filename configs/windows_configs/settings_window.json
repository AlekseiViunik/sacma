{
    "window_title": "Impostazioni",
    "window_width": 450,
    "window_height": 150,
    "layout": {
        "type": "vertical",
        "widgets": [
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Metti il link su dropbox:",
                            "column": "first"
                        },
                        {
                            "type": "input",
                            "name": "excel_link",
                            "default_value": "Paste the link here",
                            "width": 300,
                            "height": 40,
                            "column": "current"
                        }
                    ]
                }
            },
            {
                "layout": {
                    "type": "horizontal",
                    "widgets": [
                        {
                            "type": "button",
                            "text": "Save",
                            "callback": "save_settings",
                            "width": 150,
                            "height": 40
                        },
                        {
                            "type": "button",
                            "text": "Cancel",
                            "width": 150,
                            "height": 40,
                            "callback": "close_window"
                        }
                    ]
                }
            }
        ]
    }
}