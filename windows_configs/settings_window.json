{
    "window_title": "Настройки",
    "window_width": 450,
    "window_height": 150,
    "layout": {
        "type": "grid",
        "columns": 3,
        "widgets": [
            {
                "type": "label",
                "text": "Select excel file:",
                "column": "first"
            },
            {
                "type": "input",
                "name": "excel_path",
                "default_value": "Enter the path",
                "width": 250,
                "height": 40,
                "column": "current"
            },
            {
                "type": "button",
                "text": "Browse",
                "callback": "browse_file",
                "height": 40,
                "params": {
                    "target_input": "excel_path"
                },
                "column": "last"
            },
            {
                "type": "button",
                "text": "Save",
                "width": 150,
                "height": 40,
                "callback": "save_settings",
                "column": "first"
            },
            {
                "type": "button",
                "text": "Cancel",
                "width": 150,
                "height": 40,
                "callback": "close_window",
                "column": "last"
            }
        ]
    }
}