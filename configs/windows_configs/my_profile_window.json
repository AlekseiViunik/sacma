{
    "window_title": "Change your password",
    "window_width": 400,
    "window_height": 450,
    "layout": {
        "type": "vertical",
        "widgets": [
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "border": 1,
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Change your password:",
                            "bold": 1,
                            "column": "first"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "last"
                        },
                        {
                            "type": "label",
                            "text": "Enter old pass:",
                            "column": "first"
                        },
                        {
                            "type": "input",
                            "name": "old_password",
                            "default_value": "Enter old pass",
                            "width": 250,
                            "height": 40,
                            "column": "current",
                            "hide": 1
                        },
                        {
                            "type": "checkbox",
                            "name": "old_pass_hide",
                            "text": "Show password",
                            "column": "last",
                            "callback": "toggle_old_password"
                        },
                        {
                            "type": "label",
                            "text": "Enter new pass:",
                            "column": "first"
                        },
                        {
                            "type": "input",
                            "name": "password",
                            "default_value": "Enter new pass",
                            "width": 250,
                            "height": 40,
                            "column": "current",
                            "hide": 1
                        },
                        {
                            "type": "checkbox",
                            "name": "pass_hide",
                            "text": "Show password",
                            "column": "last",
                            "callback": "toggle_password"
                        },
                        {
                            "type": "label",
                            "text": "Repeat new password:",
                            "column": "first"
                        },
                        {
                            "type": "input",
                            "name": "repeat_password",
                            "default_value": "Repeat password",
                            "width": 250,
                            "height": 40,
                            "column": "current",
                            "hide": 1
                        },
                        {
                            "type": "checkbox",
                            "name": "rpass_hide",
                            "text": "Show repeated password",
                            "column": "last",
                            "callback": "toggle_repeat_password"
                        },
                        {
                            "type": "button",
                            "text": "Change",
                            "callback": "change_pass",
                            "params": {},
                            "width": 150,
                            "height": 40,
                            "column": "last"
                        }
                    ]
                }
            },
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "border": 1,
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Change your email",
                            "width": 150,
                            "height": 40,
                            "bold": 1,
                            "column": "first"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "last"
                        },
                        {
                            "type": "label",
                            "text": "Enter new email:",
                            "width": 150,
                            "height": 40,
                            "column": "first"
                        },
                        {
                            "type": "input",
                            "name": "new_email",
                            "default_value": {
                                "get_from_file": {
                                    "file_path": "configs/users_configs/user_main_data.json",
                                    "key": ["<username>", "email"],
                                    "is_encoded": 1
                                },
                                "starts_with": "Current is: "
                            },
                            "width": 250,
                            "height": 40,
                            "column": "current"
                        },
                        {
                            "type": "button",
                            "text": "Change",
                            "callback": "change_email",
                            "width": 150,
                            "height": 40
                        }
                    ]
                }
            },
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "border": 1,
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Change your name",
                            "width": 150,
                            "height": 40,
                            "bold": 1,
                            "column": "first"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "last"
                        },
                        {
                            "type": "label",
                            "text": "Enter new name:",
                            "width": 150,
                            "height": 40,
                            "column": "first"
                        },
                        {
                            "type": "input",
                            "name": "new_name",
                            "default_value": {
                                "get_from_file": {
                                    "file_path": "configs/users_configs/user_main_data.json",
                                    "key": ["<username>", "name"],
                                    "is_encoded": 1
                                },
                                "starts_with": "Current is: "
                            },
                            "width": 250,
                            "height": 40,
                            "column": "current"
                        },
                        {
                            "type": "button",
                            "text": "Change",
                            "callback": "change_name",
                            "width": 150,
                            "height": 40
                        }
                    ]
                }
            },
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "border": 1,
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Change your surname",
                            "width": 150,
                            "height": 40,
                            "bold": 1,
                            "column": "first"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "last"
                        },
                        {
                            "type": "label",
                            "text": "Enter new surname:",
                            "width": 150,
                            "height": 40,
                            "column": "first"
                        },
                        {
                            "type": "input",
                            "name": "new_surname",
                            "default_value": {
                                "get_from_file": {
                                    "file_path": "configs/users_configs/user_main_data.json",
                                    "key": ["<username>", "surname"],
                                    "is_encoded": 1
                                },
                                "starts_with": "Current is: "
                            },
                            "width": 250,
                            "height": 40,
                            "column": "current"
                        },
                        {
                            "type": "button",
                            "text": "Change",
                            "callback": "change_surname",
                            "width": 150,
                            "height": 40
                        }
                    ]
                }
            },
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "border": 1,
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Change your phone",
                            "width": 150,
                            "height": 40,
                            "bold": 1,
                            "column": "first"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "last"
                        },
                        {
                            "type": "label",
                            "text": "Enter new phone:",
                            "width": 150,
                            "height": 40,
                            "column": "first"
                        },
                        {
                            "type": "input",
                            "name": "new_phone",
                            "default_value": {
                                "get_from_file": {
                                    "file_path": "configs/users_configs/user_main_data.json",
                                    "key": ["<username>", "phone"],
                                    "is_encoded": 1
                                },
                                "starts_with": "Current is: "
                            },
                            "width": 250,
                            "height": 40,
                            "column": "current"
                        },
                        {
                            "type": "button",
                            "text": "Change",
                            "callback": "change_phone",
                            "width": 150,
                            "height": 40
                        }
                    ]
                }
            },
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "border": 1,
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Change your sex",
                            "width": 150,
                            "height": 40,
                            "bold": 1,
                            "column": "first"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "last"
                        },
                        {
                            "type": "label",
                            "text": "Select new sex:",
                            "width": 150,
                            "height": 40,
                            "column": "first"
                        },
                        {
                            "type": "dropdown",
                            "name": "new_sex",
                            "default_value": "m",
                            "options": {
                                "always": ["m", "f"]
                            },
                            "width": 250,
                            "height": 40,
                            "column": "current"
                        },
                        {
                            "type": "button",
                            "text": "Change",
                            "callback": "change_sex",
                            "width": 150,
                            "height": 40
                        }
                    ]
                }
            },
            {
                "layout": {
                    "type": "horizontal",
                    "widgets": [
                        {
                            "type": "button",
                            "text": "Close",
                            "width": 150,
                            "height": 40,
                            "callback": "close_window"
                        }
                    ]
                }
            }
        ]
    }
}