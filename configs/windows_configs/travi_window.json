{
    "window_title": "Travi",
    "window_width": 350,
    "window_height": 300,
    "layout": {
        "type": "vertical",
        "name": "base_layout",
        "widgets": [
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "name": "changing",
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Tipo",
                            "width": 100,
                            "height": 20,
                            "column": "first"
                        },
                        {
                            "type": "dropdown",
                            "width": 150,
                            "height": 20,
                            "name": "type",
                            "default_value": "TG",
                            "options": {"always": ["TG", "SAT", "APERTE", "PORTA SKID"]},
                            "change_widgets": 1,
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "last"
                        }
                    ]
                }
            },
            {
                "layout": {
                    "type": "grid",
                    "columns": 3,
                    "name": "main_layout",
                    "depends_on": "type",
                    "widgets": [
                        {
                            "type": "label",
                            "text": "Altezza",
                            "column": "first",
                            "width": 100,
                            "height": 20,
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"]
                        },
                        {
                            "type": "dropdown",
                            "name": "height",
                            "width": 150,
                            "height": 20,
                            "default_value": "70",
                            "column": "current",
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"],
                            "options": {
                                "TG": ["70", "80", "90", "100", "110", "120", "130", "140", "150", "160", "170"],
                                "SAT": ["80", "100"],
                                "APERTE": ["70", "80", "90", "100", "110", "120", "130", "140", "150", "160", "170", "180", "190", "200"],
                                "PORTA SKID": ["20", "25", "30", "35", "40", "45", "50"]
                            }
                        },
                        {
                            "type": "label",
                            "text": "mm",
                            "column": "last",
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"]
                        },
                        {
                            "type": "label",
                            "text": "Base",
                            "width": 100,
                            "height": 20,
                            "column": "first",
                            "active_when": ["TG", "APERTE", "PORTA SKID"]
                        },
                        {
                            "type": "dropdown",
                            "name": "base",
                            "width": 150,
                            "height": 20,
                            "default_value": "45",
                            "active_when": ["TG", "APERTE", "PORTA SKID"],
                            "options": {
                                "TG": ["45", "50"],
                                "APERTE": ["45", "50", "60"],
                                "PORTA SKID": ["40"]
                            },
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "mm",
                            "column": "last",
                            "active_when": ["TG", "APERTE", "PORTA SKID"]
                        },
                        {
                            "type": "label",
                            "text": "Appoggio",
                            "width": 100,
                            "height": 20,
                            "column": "first",
                            "active_when": ["SAT"]
                        },
                        {
                            "type": "dropdown",
                            "name": "support",
                            "width": 150,
                            "height": 20,
                            "default_value": "45",
                            "active_when": ["SAT"],
                            "options": {
                                "SAT": ["No", "Sì"]
                            },
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "Spessore",
                            "width": 100,
                            "height": 20,
                            "column": "first",
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"]
                        },
                        {
                            "type": "dropdown",
                            "name": "thickness",
                            "width": 150,
                            "height": 20,
                            "default_value": "1.2",
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"],
                            "options": {
                                "TG": ["1.2", "1.5", "2.0"],
                                "SAT": ["2.5", "3.0"],
                                "APERTE": ["2.0", "2.5", "3.0"],
                                "PORTA SKID": ["2.0", "2.5", "3.0"]
                            },
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "mm",
                            "column": "last",
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"]
                        },
                        {
                            "type": "label",
                            "text": "Staffa speciale",
                            "width": 100,
                            "height": 20,
                            "column": "first",
                            "active_when": ["TG", "SAT", "APERTE"]
                        },
                        {
                            "type": "dropdown",
                            "name": "special_hook",
                            "width": 150,
                            "height": 20,
                            "default_value": "No",
                            "active_when": ["TG", "SAT", "APERTE"],
                            "options": {
                                "TG": ["No", "Sì"],
                                "SAT": ["No", "Sì"],
                                "APERTE": ["No", "Sì"]
                            },
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "Quantità",
                            "width": 100,
                            "height": 20,
                            "column": "first",
                            "active_when": ["TG", "SAT", "APERTE"]
                        },
                        {
                            "type": "dropdown",
                            "name": "amount",
                            "width": 150,
                            "height": 20,
                            "default_value": ">=1001",
                            "active_when": ["TG", "SAT", "APERTE"],
                            "options": {
                                "TG": [">=1001", "<=1000"],
                                "SAT": [">=1001", "<=1000"],
                                "APERTE": [">=1001", "<=1000"]
                            },
                            "column": "current"
                        },
                        {
                            "type": "label",
                            "text": "Lunghezza",
                            "width": 100,
                            "height": 20,
                            "column": "first",
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"]
                        },
                        {
                            "type": "input",
                            "name": "length",
                            "default_value": "Enter the length",
                            "width": 150,
                            "height": 20,
                            "column": "current",
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"]
                        },
                        {
                            "type": "label",
                            "text": "mm",
                            "column": "last",
                            "active_when": ["TG", "SAT", "APERTE", "PORTA SKID"]
                        }
                    ]        
                }
            },
            {
                "layout": {
                    "type":"grid",
                    "columns": 3,
                    "name": "bottom_layout",
                    "widgets": [
                        {
                            "type": "label",
                            "text": "",
                            "column": "first"
                        },
                        {
                            "type": "label",
                            "text": "",
                            "column": "current"
                        },
                        {
                            "type": "button",
                            "text": "Invia",
                            "height": 40,
                            "callback": "handle_start_button",
                            "params": {},
                            "column": "last"
                        }
                    ]
                }
            }
        ]
    }
}