import openpyxl


class FileHandler:
    def __init__(self, type_of_the_shelf, data):
        self.type_of_the_shelf = type_of_the_shelf
        self.data = data

    def process_excel(self, filename="file.xlsx"):
        """Открывает Excel, записывает данные, считывает результаты и
        закрывает файл без сохранения."""

        # Открываем файл (data_only=True, чтобы считать только значения)
        wb = openpyxl.load_workbook(filename, data_only=True)
        sheet = wb["Listino Travi"]  # Открываем нужный лист

        # Ввод значений в ячейки
        sheet["B4"] = 120
        sheet["B6"] = 50
        sheet["B8"] = 1.5
        sheet["B12"] = 2700
        sheet["B14"] = "Sì"
        sheet["B16"] = ">1001"

        # Считываем значения из ячеек E4 и E6
        value_e4 = sheet["E4"].value
        value_e6 = sheet["E6"].value

        # Закрываем файл без сохранения
        wb.close()

        return value_e4, value_e6
